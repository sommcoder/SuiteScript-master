<?xml version="1.0"?>
<!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">

<pdf>
<head>
	<link name="NotoSans" type="font" subtype="truetype" src="${nsfont.NotoSans_Regular}" src-bold="${nsfont.NotoSans_Bold}" src-italic="${nsfont.NotoSans_Italic}" src-bolditalic="${nsfont.NotoSans_BoldItalic}" bytes="2" />
	<#if .locale == "zh_CN">
		<link name="NotoSansCJKsc" type="font" subtype="opentype" src="${nsfont.NotoSansCJKsc_Regular}" src-bold="${nsfont.NotoSansCJKsc_Bold}" bytes="2" />
	<#elseif .locale == "zh_TW">
		<link name="NotoSansCJKtc" type="font" subtype="opentype" src="${nsfont.NotoSansCJKtc_Regular}" src-bold="${nsfont.NotoSansCJKtc_Bold}" bytes="2" />
	<#elseif .locale == "ja_JP">
		<link name="NotoSansCJKjp" type="font" subtype="opentype" src="${nsfont.NotoSansCJKjp_Regular}" src-bold="${nsfont.NotoSansCJKjp_Bold}" bytes="2" />
	<#elseif .locale == "ko_KR">
		<link name="NotoSansCJKkr" type="font" subtype="opentype" src="${nsfont.NotoSansCJKkr_Regular}" src-bold="${nsfont.NotoSansCJKkr_Bold}" bytes="2" />
	<#elseif .locale == "th_TH">
		<link name="NotoSansThai" type="font" subtype="opentype" src="${nsfont.NotoSansThai_Regular}" src-bold="${nsfont.NotoSansThai_Bold}" bytes="2" />
	</#if>
    <macrolist>
        <macro id="nlheader">
            <table style="width: 100%; font-size: 10pt;">
			<tr>
				<td rowspan="3" style="padding: 0;">
				<!-- If logo is NOT empty, display logo -->
				<#if companyInformation.logoUrl?length != 0>
					<img src="${companyInformation.logoUrl}" style="float: left; margin: 7px" />
				</#if> 
					${companyInformation.companyName}<br />
					${companyInformation.addressText}
				</td>
				<td align="right" style="padding: 0;">
					<span style="font-size: 28pt;">${record@title}</span>
				</td>
			</tr>

			<tr>
				<td align="right" style="padding: 0;">
					<span style="font-size: 16pt;">#${record.tranid}</span>
				</td>
			</tr>

			<tr>
				<td align="right" style="padding: 0;">${record.trandate}
				</td>
			</tr>
			</table>
        </macro>

        <macro id="nlfooter">
            <table style="width: 100%; font-size: 8pt;">
			<tr>
				<td>
					<p id="footer-disclaimer">
						${companyinformation.formlogo}Please review order confirmation details to ensure order accuracy.
					</p>
				</td>
			</tr>
			<tr>
				<td>
					<barcode id="barcode-macro" codetype="code128" showtext="true" value="${record.tranid}"/>
				</td>
				<td id="page-number-macro">
					<pagenumber/> of <totalpages/>
				</td>
			</tr>
			</table>
        </macro>
    </macrolist>
    <style type="text/css">
	* {
		<#if .locale == "zh_CN">
			font-family: NotoSans, NotoSansCJKsc, sans-serif;
		<#elseif .locale == "zh_TW">
			font-family: NotoSans, NotoSansCJKtc, sans-serif;
		<#elseif .locale == "ja_JP">
			font-family: NotoSans, NotoSansCJKjp, sans-serif;
		<#elseif .locale == "ko_KR">
			font-family: NotoSans, NotoSansCJKkr, sans-serif;
		<#elseif .locale == "th_TH">
			font-family: NotoSans, NotoSansThai, sans-serif;
		<#else>
			font-family: NotoSans, sans-serif;
		</#if>
	}
	
	table {
			font-size: 9pt;
			table-layout: fixed;
	}

	tr {
		border: 1px solid orangered;
	}
    
	th {
            font-weight: bold;
            font-size: 8pt;
            vertical-align: middle;
			text-align: center;
            padding: 5px 6px 3px;
            background-color: #e3e3e3;
            color: #333333;
    }

	td { 
		padding: 4px 6px; 
		border: 1px solid black;
		vertical-align: middle;
	}

	hr {
		width: 100%; 
		color: #d3d3d3; background-color: #d3d3d3; height: 1px;
	}

	.item-value-inputs {
		text-align: center;
	}

	.billing-shipping-header-cells {
		font-size: 8pt;
		padding: 6px 0 2px; 
		font-weight: bold; 
		color: #333333;
		width: 25%;
	}

	#billing-shipping-header-total {
		font-size: 12pt; background-color: #e3e3e3; font-weight: bold;
		width: 50%;
	}
	
	#billing-shipping-total {
		font-size: 28pt; padding-top: 20px; background-color: #e3e3e3;
		align: right;
	}

	.item-headers {
		padding: 10px 6px; 
		text-align: center;
	}

	.item-description-data {
		font-weight: bold; 
		text-align: center;
		width: 50%;
		line-height: 150%; 
		color: #333333;
	}

	#footer-disclaimer {
		text-align: center;
		display: block;
		align: center;
	}

	#barcode-macro {
		align: left;
		text-align: left;
	}

	#page-number-macro {
		align: right;
		text-align: right;
	}
</style>
</head>

<body header="nlheader" header-height="10%" footer="nlfooter" footer-height="20pt" padding="0.5in 0.5in 0.5in 0.5in" size="Letter">


<!-- billing/shipping Table -->
    <table style="width: 100%; margin-top: 10px;">
	<tr>
		<td class=".billing-shipping-header-cells">${record.billaddress@label}
		</td>
		<td class=".billing-shipping-header-cells">${record.shipaddress@label}
		</td>
		<td id="billing-shipping-header-total">${record.total@label?upper_case}
		</td>
	</tr>

<!-- villing/shipping Table Values -->
	<tr>
		<td>${record.billaddress}
		</td>
		<td>${record.shipaddress}
		</td>
		<td id="billing-shipping-total">${record.total}
		</td>
	</tr>
	</table>

<!-- Sales Info Table -->
	<table style="width: 100%; margin-top: 10px;">
	<tr>
		<th>${record.otherrefnum@label}</th>
		<th>${record.salesrep@label}</th>
		<th style="width: 30%;">Contact</th>
		<th>${record.shipdate@label}</th>
	</tr>

	<!-- Sales Info Table VALUES: -->
	<tr>
		<td style="padding-top: 2px;">${record.otherrefnum}</td>
		<td style="padding-top: 2px;">${record.salesrep}</td>
		<td style="padding-top: 2px;">${record.salesrep.email}</td>
		<td style="padding-top: 2px;">${record.shipdate}</td>
	</tr>
	</table>

<!-- Item Table -->
<#if record.item?has_content>
	<table style="width: 100%; margin-top: 10px;">
	<!-- start items -->
	<#list record.item as item>
	<#if item_index==0>
	<thead>
		<tr>
		<!-- Item Table Header: -->
			<th class="item-headers">${item.quantity@label}
			</th>
			<th style="width: 40%;" class="item-headers">${item.item@label}
			</th>
			<th class="item-headers">${item.quantitybackordered@label}
			</th>
			<th class="item-headers">${item.custcol_rd_weight_unit@label}
			</th>
			<th class="item-headers">${item.rate@label}
			</th>
			<th class="item-headers">${item.amount@label}
			</th>
		</tr>
		</thead>
		</#if>
		<!-- Item Table Header VALUES: -->
		<tr>
			<td class="item-value-inputs">${item.quantity}</td>
			<td class="item-value-inputs">
				<span class="item-description-data">${item.item}
				</span><br />
				${item.description}
			</td>
			<td class="item-value-inputs">${item.quantitybackordered}</td>
			<td class="item-value-inputs">${item.custcol_rd_weight_unit}</td>
			<td class="item-value-inputs">${item.rate}</td>
			<td class="item-value-inputs">${item.amount}</td>
		  </tr>
		</#list><!-- end items -->
		</table>

		<hr />
</#if>

	<!-- TOTALS TABLE: -->
	<table style="page-break-inside: avoid; width: 100%; margin-top: 10px;">
		<tr>
			<td colspan="4">&nbsp;</td>
			<td align="right" style="font-weight: bold; color: #333333;">${record.subtotal@label}</td>
			<td align="right">${record.subtotal}</td>
		</tr>
		<tr>
			<td colspan="4">&nbsp;</td>
			<td align="right" style="font-weight: bold; color: #333333;">${record.taxtotal@label} (${record.taxrate}%)</td>
			<td align="right">${record.taxtotal}</td>
		</tr>
		<tr style="background-color: #e3e3e3; line-height: 200%;">
			<td background-color="#ffffff" colspan="4">&nbsp;</td>
			<td align="right" style="font-weight: bold; color: #333333;">${record.total@label}</td>
			<td align="right">${record.total}</td>
		</tr>
	</table>
</body>
</pdf>